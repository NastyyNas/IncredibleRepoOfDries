<Window x:Class="ExampleMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleMenu"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="550">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Open" Name="openMenuItem" Click="openMenuItem_Click"/>
                <MenuItem Header="Rewrite" Name="rewriteMenuItem" IsEnabled="False" Click="rewriteMenuItem_Click"/>
                <MenuItem Header="Append" Name="appendMenuItem" IsEnabled="False" Click="appendMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Exit"  Name="exitMenuItem" Click="exitMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <TextBox Name="outputTextBox"  HorizontalAlignment="Left" Height="281" Margin="74,35,0,0" Background="LightYellow" TextWrapping="Wrap"  VerticalAlignment="Top" Width="386"/>
        </Grid>
    </DockPanel>
</Window>
