<Window x:Class="ReadingWriting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadingWriting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBox Name="textTextBox" HorizontalAlignment="Left" Margin="64,72,0,0" TextWrapping="Wrap"  AcceptsReturn="True" VerticalAlignment="Top" Height="248" Width="263"/>
        <Button Name="readButton"  Content="Read" HorizontalAlignment="Left" Margin="403,77,0,0" VerticalAlignment="Top" Width="75" Click="ReadButton_Click"/>
        <Button Name="writeButton" Content="Write" HorizontalAlignment="Left" Margin="403,144,0,0" VerticalAlignment="Top" Width="75" Click="WriteButton_Click"/>

    </Grid>
</Window>
